---
import { siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto flex w-full flex-col items-center justify-center gap-y-2 pt-20 pb-4 text-center align-top text-xs font-semibold text-gray-600 sm:flex-row sm:justify-between sm:text-sm dark:text-gray-400"
>
	<div class="me-0 sm:me-4">
		&copy; {siteConfig.author}
		{year}
	</div>

	<nav aria-label="More on this site" class="flex gap-x-2 sm:gap-x-4">
		<a href="#" class="hover:text-link underline-offset-4 hover:underline" aria-label="Back to Top">
			Top &uarr;
		</a>
	</nav>
</footer>
